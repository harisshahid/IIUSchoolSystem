<div class="box box-primary" id="createAccount" style="display: none;">
    <div class="box-header">
        <h3 class="box-title" id="headingUser"><i class="icon-reorder"></i>New Account</h3>
    </div>
    <form id="userForm">
        <div class="box-body">
            <div>
                <h3 class="pageHeader smaller lighter green">
                    General User Information
                </h3>
            </div>
            <div class="form-group">
                <label for="FirstName">First Name</label>
                <input type="text" class="form-control required" name="FirstName" id="FirstName" />
            </div>
            <div class="form-group">
                <label for="LastName">Last Name</label>
                <input type="text" class="form-control required" name="LastName" id="LastName" />
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="text" class="form-control required email" name="Email" id="Email" />
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                <input type="text" class="form-control" name="Address" id="Address" />
            </div>
            <div class="form-group">
                <label for="City">City</label>
                <input type="text" class="form-control required" name="City" id="City" />
            </div>
            <div class="form-group">
                <label for="Zip">Zip</label>
                <input type="text" class="form-control digits" name="Zip" id="Zip" maxlength="5" />
            </div>
            <div class="form-group">
                <label for="StateId">State</label>
                @Html.DropDownList("StateId", new SelectList(ViewBag.States, "Value", "Text", 0), new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Phone">Phone</label>
                <input type="text" class="form-control digits" name="Phone" id="Phone" maxlength="11" />
            </div>
            <div class="form-group">
                <label for="Cell">Cell</label>
                <input type="text" class="form-control digits" name="Cell" id="Cell" maxlength="11" />
            </div>
            <div>
                <h3 class="pageHeader smaller lighter green">
                    Account Information
                </h3>
            </div>
            <div class="form-group">
                <label for="UserName">User Name</label>
                <input type="text" class="form-control required" name="UserName" id="UserName" min="6" />
            </div>
            <div class="form-group">
                <label for="Password">password</label>
                <input type="password" class="form-control required" name="Password" id="Password" min="6" />
            </div>
            <div class="form-group">
                <label for="RoleId">Select Role</label>
                @Html.DropDownList("RoleId", new SelectList(ViewBag.Roles, "Value", "Text", 0), new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Active">Active</label>
                <input type="checkbox" id="Active" />
            </div>
            <input type="hidden" id="hdnId" value="0" />
            <input type="hidden" id="hdnGuid" />
            <div class="buttons-align-right">
                <button type="button" class="btn btn-success btn-sm" id="CreateOrUpdateUser">Save</button>
                <button type="button" id="clearButton" onclick="ResetFields();" class="btn btn-danger btn-sm">Clear</button>
                <button type="button" id="cancelUserCreation" class="btn btn-sm">Cancel</button>
            </div>
        </div>
    </form>
</div>
